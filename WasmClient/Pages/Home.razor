@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Home - Service Booking Platform</PageTitle>

<div class="page-content">
    <div class="hero-section">
        <div class="container text-center">
            <h1 class="display-3">
                <i class="bi bi-calendar-check me-3"></i>
                Service Booking Platform
            </h1>
            <p class="lead">Book services with ease and manage your appointments efficiently</p>
        </div>
    </div>

    <div class="container">
        <AuthorizeView>
            <Authorized>
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="card feature-card h-100">
                            <div class="card-body">
                                <i class="bi bi-calendar2-check text-primary"></i>
                                <h5 class="card-title">My Bookings</h5>
                                <p class="card-text text-muted">View and manage your existing bookings. Track your appointments and make changes as needed.</p>
                                <a href="/bookings" class="btn btn-primary">
                                    <i class="bi bi-arrow-right-circle me-2"></i>
                                    Go to Bookings
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card feature-card h-100">
                            <div class="card-body">
                                <i class="bi bi-grid text-success"></i>
                                <h5 class="card-title">Browse Services</h5>
                                <p class="card-text text-muted">Explore our wide range of available services and book appointments that fit your schedule.</p>
                                <a href="/services" class="btn btn-success">
                                    <i class="bi bi-search me-2"></i>
                                    View Services
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-5">
                    <div class="col-12">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h4 class="card-title">
                                    <i class="bi bi-info-circle-fill text-info me-2"></i>
                                    Quick Tips
                                </h4>
                                <ul class="list-unstyled mb-0">
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        Browse available services and select the one that suits your needs
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        View your booking history and upcoming appointments
                                    </li>
                                    <li class="mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        Manage your bookings - update or cancel as needed
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="card shadow-lg">
                            <div class="card-body text-center py-5">
                                <i class="bi bi-door-open" style="font-size: 4rem; color: var(--primary-color);"></i>
                                <h4 class="card-title mt-4 mb-3">Welcome to Service Booking Platform</h4>
                                <p class="card-text text-muted mb-4">
                                    Please log in to access your bookings and browse our services. 
                                    Experience seamless appointment management at your fingertips.
                                </p>
                                <a href="/login" class="btn btn-primary btn-lg px-5">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>
                                    Login Now
                                </a>
                            </div>
                        </div>

                        <div class="row mt-5 g-3">
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="bi bi-lightning-charge text-warning" style="font-size: 2.5rem;"></i>
                                    <h6 class="mt-2">Fast & Easy</h6>
                                    <small class="text-muted">Quick booking process</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="bi bi-shield-check text-success" style="font-size: 2.5rem;"></i>
                                    <h6 class="mt-2">Secure</h6>
                                    <small class="text-muted">Your data is protected</small>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="text-center">
                                    <i class="bi bi-clock-history text-info" style="font-size: 2.5rem;"></i>
                                    <h6 class="mt-2">24/7 Access</h6>
                                    <small class="text-muted">Book anytime, anywhere</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>


