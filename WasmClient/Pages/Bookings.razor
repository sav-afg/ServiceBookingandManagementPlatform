@page "/bookings"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize] 
@using ServiceBookingPlatform.Models.Dtos.Booking
@using WasmClient.Api
@using WasmClient.Services
@inject IUserBookingApiClient BookingClient
@inject IJSInteropService JSInterop
@inject NavigationManager Navigation

<PageTitle>My Bookings - Service Booking Platform</PageTitle>

<div class="page-content">
    <div class="container">
        <div class="page-header">
            <div class="d-flex justify-content-between align-items-center">
                <h3>
                    <i class="bi bi-calendar-check me-2"></i>
                    My Bookings
                </h3>
                <button class="btn btn-primary" @onclick="CreateNewBooking">
                    <i class="bi bi-plus-circle me-2"></i>
                    New Booking
                </button>
            </div>
        </div>

        @if (isLoading)
        {
            <div class="loading-container">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 text-muted">Loading your bookings...</p>
                </div>
            </div>
        }
        else if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>@errorMessage</div>
            </div>
        }
        else if (bookings == null || bookings.Count == 0)
        {
            <div class="text-center py-5">
                <i class="bi bi-calendar-x" style="font-size: 4rem; color: #dee2e6;"></i>
                <h4 class="mt-4 text-muted">No bookings found</h4>
                <p class="text-muted">Create your first booking to get started!</p>
                <button class="btn btn-primary mt-3" @onclick="CreateNewBooking">
                    <i class="bi bi-plus-circle me-2"></i>
                    Create Booking
                </button>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var booking in bookings)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card booking-card h-100">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <h5 class="card-title mb-0">
                                        <i class="bi bi-bookmark-fill me-2"></i>
                                        Booking #@booking.Id
                                    </h5>
                                    <span class="badge bg-@GetStatusBadgeColor(booking.Status)">
                                        @booking.Status
                                    </span>
                                </div>

                                <div class="card-text">
                                    <div class="mb-2">
                                        <i class="bi bi-briefcase text-primary me-2"></i>
                                        <strong>Service:</strong> @booking.ServiceName
                                    </div>
                                    <div class="mb-2">
                                        <i class="bi bi-calendar-event text-success me-2"></i>
                                        <strong>Start:</strong> @booking.ScheduledStart.ToString("MMM dd, yyyy hh:mm tt")
                                    </div>
                                    <div class="mb-2">
                                        <i class="bi bi-calendar-event-fill text-danger me-2"></i>
                                        <strong>End:</strong> @booking.ScheduledEnd.ToString("MMM dd, yyyy hh:mm tt")
                                    </div>
                                    <div class="mb-2">
                                        <i class="bi bi-person text-info me-2"></i>
                                        <strong>Name:</strong> @booking.LastName
                                    </div>
                                    <div>
                                        <i class="bi bi-envelope text-warning me-2"></i>
                                        <strong>Email:</strong> @booking.Email
                                    </div>
                                </div>

                                <hr class="my-3" />

                                <div class="btn-group w-100" role="group">
                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => ViewBooking(booking.Id)">
                                        <i class="bi bi-eye"></i>

                                    </button>
                                    <button class="btn btn-sm btn-outline-warning" @onclick="() => EditBooking(booking.Id)">
                                        <i class="bi bi-pencil"></i>
                                        
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteBooking(booking.Id)">
                                        <i class="bi bi-trash"></i>
                                        
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-4 text-center text-muted">
                <small>
                    <i class="bi bi-info-circle me-1"></i>
                    Total bookings: @bookings.Count
                </small>
            </div>
        }
    </div>
</div>

@code {
    private List<BookingDto>? bookings;
    private string? errorMessage;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadBookings();
    }

    private async Task LoadBookings()
    {
        isLoading = true;
        errorMessage = null;

        // Load bookings from the API
        try
        {
            bookings = await BookingClient.GetAllBookingsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = "Failed to load bookings. Please try again.";
            Console.WriteLine($"Error loading bookings: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void CreateNewBooking()
    {
        Navigation.NavigateTo("/bookings/create");
    }

    private void ViewBooking(int id)
    {
        Navigation.NavigateTo($"/bookings/{id}");
    }

    private void EditBooking(int id)
    {
        Navigation.NavigateTo($"/bookings/edit/{id}");
    }

    private async Task DeleteBooking(int id)
    {
        // Show confirmation dialog before deleting
        var confirmed = await JSInterop.ConfirmAsync("Are you sure you want to delete this booking?");

        // If the user confirms, proceed with deletion
        if (confirmed)
        {
            isLoading = true;
            errorMessage = null;
            
            try
            {
                await BookingClient.DeleteBookingAsync(id);
                await LoadBookings(); // Reload the list
            }
            catch (Exception ex)
            {
                errorMessage = "Failed to delete booking. Please try again.";
                Console.WriteLine($"Error deleting booking: {ex.Message}");
                isLoading = false;
            }
        }
    }

    private static string GetStatusBadgeColor(string status)
    {
        // Maps booking status to Bootstrap badge colors
        return status?.ToLower() switch
        {
            "pending" => "pending",
            "confirmed" => "confirmed",
            "cancelled" => "cancelled",
            "completed" => "completed",
            _ => "secondary"
        };
    }
}

