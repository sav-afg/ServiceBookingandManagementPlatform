@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using WasmClient.Services
@inject AuthenticationStateProvider AuthStateProvider
@inject ITokenService TokenService
@inject NavigationManager Navigation

<div class="page">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary sticky-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-calendar-check-fill me-2"></i>
                Service Booking
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="bi bi-house-door-fill me-1"></i>
                            Home
                        </a>
                    </li>
                    <AuthorizeView>
                        <Authorized>
                            <li class="nav-item">
                                <a class="nav-link" href="/services">
                                    <i class="bi bi-grid-fill me-1"></i>
                                    Services
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/bookings">
                                    <i class="bi bi-calendar-check me-1"></i>
                                    My Bookings
                                </a>
                            </li>
                        </Authorized>
                    </AuthorizeView>
                </ul>
                <AuthorizeView>
                    <Authorized>
                        <div class="d-flex align-items-center">
                            <span class="navbar-text me-3">
                                <i class="bi bi-person-circle me-1"></i>
                                Hello, @context.User.Identity?.Name
                            </span>
                            <button class="btn btn-outline-light" @onclick="Logout">
                                <i class="bi bi-box-arrow-right me-1"></i>
                                Logout
                            </button>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <a class="btn btn-outline-light" href="/login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>
                            Login
                        </a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>
    </nav>

    <main class="content">
        @Body
    </main>

    <footer class="bg-light py-4 mt-5 border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="text-muted mb-0">
                        <i class="bi bi-c-circle me-1"></i>
                        2024 Service Booking Platform. All rights reserved.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <small class="text-muted">
                        <i class="bi bi-shield-check me-1"></i>
                        Secure & Reliable
                    </small>
                </div>
            </div>
        </div>
    </footer>
</div>

@code {
    private async Task Logout()
    {
        await TokenService.ClearTokensAsync();
        ((CustomAuthStateProvider)AuthStateProvider).NotifyAuthenticationStateChanged();
        Navigation.NavigateTo("/login", forceLoad: true);
    }
}


